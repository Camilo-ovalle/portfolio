import ProjectCard from "./ProjectCard.astro";

// Simplemente agrega o quita objetos de este array para actualizar tu portafolio
const projects = [
  {
    title: "Proyecto Increíble 1",
    description: "Una breve descripción de este proyecto. Explica el problema que resuelve y las tecnologías clave utilizadas.",
    technologies: ["Astro", "React", "Tailwind CSS"],
    link: "#"
  },
  {
    title: "Plataforma de E-commerce",
    description: "Plataforma completa con carrito de compras, pagos y gestión de productos. Enfocado en rendimiento y UX.",
    technologies: ["Next.js", "TypeScript", "Stripe"],
    link: "#"
  },
