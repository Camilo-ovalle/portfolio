---
export interface Props {
  title: string;
  description: string;
  technologies: string[];
  link?: string; // Enlace opcional al proyecto o repositorio
}

const { title, description, technologies, link } = Astro.props;
---

<div class="bg-white/50 dark:bg-gray-800/50 border border-gray-200 dark:border-gray-700 rounded-lg shadow-lg p-6 transform hover:scale-105 transition-transform duration-300">
  <h3 class="text-xl font-bold mb-2 text-gray-900 dark:text-white">{title}</h3>
  
  <div class="flex flex-wrap gap-2 mb-4">
    {technologies.map((tech) => (
      <span class="text-xs font-semibold bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200 px-2 py-1 rounded-full">
        {tech}
      </span>
    ))}
  </div>
  
  <p class="text-gray-600 dark:text-gray-400 mb-4">
    {description}
  </p>
  
  {link && (
    <a 
      href={link} 
      target="_blank" 
      rel="noopener noreferrer"
      class="inline-block text-green-600 dark:text-green-400 font-semibold hover:underline"
    >
      Ver m√°s &rarr;
    </a>
  )}
</div>
