---
import linkedinIcon from "../assets/icons/linkedin-app-white-icon.svg";
import githubIcon from "../assets/icons/github-white-icon.svg";
import { getTranslations, type Locale, getCurrentYear, formatText } from '../utils/i18n';

interface Props {
  locale?: Locale;
}

const { locale = 'es' } = Astro.props;
const currentLocale = (Astro.currentLocale || locale) as Locale;
const t = getTranslations(currentLocale);

---

<footer class="bg-white/70 dark:bg-gray-900/70 backdrop-blur-md mt-16">
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col items-center space-y-4">
      <div class="flex space-x-6">
       <a href="">
        <img height="40px" width="40px" src={linkedinIcon.src} alt="Linkedin">
       </a>
       <a href="">
        <img height="40px" width="40px" src={githubIcon.src} alt="Github">
       </a>
      </div>
      <p class="text-sm text-gray-500 dark:text-gray-400">
        {formatText(t.footer.copyright, { year: getCurrentYear() })}
      </p>
    </div>
  </div>
</footer>
